<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/GRAY"
        android:textSize="22sp"
        android:text="@string/carNumber_title"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/DIMEN_20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/GRAY"
        android:layout_marginTop="@dimen/DIMEN_60dp"
        android:maxLength="8"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/car_button_Layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_49PX"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_can"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_carnumber_no_selector"
            android:text="@string/save_no"
            android:textColor="@color/GRAY"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_carnumber_ok_selector"
            android:text="@string/save_ok"
            android:textColor="@color/GRAY"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>